extends layout

block content
  .main.container
    .row
      .col-md-6.col-md-offset-3
        br
        h1.display-4.m-b-2 Sign Up

        form(method='POST' action='/login/existing')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter your name' name='name')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          button.btn.btn-primary(type='submit') Login
        br
        if exist_message 
            div.alert.alert-warning #{exist_message}
      
      
      .col-md-6
        br
        h1.display-4.m-b-2 Register

        form(method='POST' action='/login/new')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Enter your name' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='address@email.com' name='email')
          div.form-group
            label(for='pw') Password:
            input#pw.form-control(type='password' name='password')
          div.form-group
            label(for='pw2') Confirm Password:
            input#pw2.form-control(type='password' name='confirmPassword')
          button.btn.btn-primary(type='submit') Register
        br
        if new_message 
            div.alert.alert-warning #{new_message}